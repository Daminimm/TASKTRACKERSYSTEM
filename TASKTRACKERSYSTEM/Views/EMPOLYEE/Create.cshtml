@model TASKTRACKERSYSTEM.Models.TASK
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<script src="~/Scripts/jquery-2.0.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />


<h2>Create</h2>

@{
    if (ViewBag.Message != null)
    {
        <div>
            @ViewBag.Message= TempData["message"];
        </div>
    }
}
<style type="text/css">
    .ui-datepicker-trigger {
        /* Apply your CSS styles here */
        width: 36px;
        height: 40.53px;
    }

    body {
        font-family: 'Times New Roman';
        font-size: 15pt;
    }

    label.required::after {
        content: " *";
        color: red;
    }

    .form-control {
        border: 2px solid;
        padding: 3px;
        
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p class="form-horizontal">
    <p>EMPLOYE</p>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <p class="form-group">
        @Html.LabelFor(model => model.TASKNAME, "Task Name", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.EditorFor(model => model.TASKNAME)
    </p>
    <p class="col-md-10">

        @*@Html.ValidationMessageFor(model => model.TASKNAME, "", new { @class = "text-danger" })*@

    </p>

    <p class="form-group">
        @Html.LabelFor(model => model.ASSIGNEDTO, "Assigned To", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @*@Html.Label("AssignedTo", htmlAttributes: new { @class = "control-label col-md-2 required" })*@
        @Html.DropDownList("ASSIGNEDTO", (List<SelectListItem>)ViewBag.UserList, "Select User")
    </p>
    <p class="col-md-10">
        @Html.ValidationMessageFor(model => model.ASSIGNEDTO, "", new { @class = "text-danger" })
    </p>

    <p class="form-group">
        @Html.LabelFor(model => model.DUETO, "Due To", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.EditorFor(model => model.DUETO, new { @class = "datepicker", @autocomplete = "off", @display = "date" })
        <span class="input-group-addon">
            <i class="fa fa-calendar"></i>
        </span>
    </p>
    <p class="col-md-10">

        @Html.ValidationMessageFor(model => model.DUETO, "", new { @class = "text-danger" })

    </p>

    <p class="form-group">

        @Html.LabelFor(model => model.STATUS, "Status", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.DropDownList("Status", (IEnumerable<SelectListItem>)ViewBag.Status, "Select Status")

    </p>

    <p class="form-group">
    <p class="col-md-offset-2 col-md-10">
        <button>SUBMIT</button>
        @*<input type="submit" value="Submit" class="btn btn-default" />*@

    </p>
    </p>
    </p>
 }


<p>
    @Html.ActionLink("Back to List", "Index")
</p>
<script>
    $(document).ready(function () {
        $("#DUETO").datepicker({
            dateFormat: "dd-MM-yy",
            minDate: 0,
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            showOtherMonths: true,
            selectOtherMonths: true,
            showOn: 'button',
            buttonImageOnly: true,
            buttonImage: 'https://jqueryui.com/resources/demos/datepicker/images/calendar.gif',
            timepicker: false,


        });
    });
</script>





