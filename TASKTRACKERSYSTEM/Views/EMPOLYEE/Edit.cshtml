@model TASKTRACKERSYSTEM.Models.TASK
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.0.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />

@*<h2>Edit</h2>*@
<style type="text/css">
    .ui-datepicker-trigger {
        /* Apply your CSS styles here */
        width: 36px;
        height: 40.53px;
    }

    body {
        font-family: 'Times New Roman';
        font-size: 15pt;
    }

    label.required::after {
        content: " *";
        color: red;
    }

    .form-control {
        border: 2px solid;
        padding: 3px;
        box-sizing: border-box;
    }
</style>
@{
    if (ViewBag.Message != null)
    {
        <div>
            @ViewBag.Message= TempData["message"];
        </div>
    }
}

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <p class="form-horizontal"></p>
    <p>Edit Task </p>
    <hr />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <p class="form-group">
        @Html.LabelFor(model => model.TASKNAME, "TaskName ", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.EditorFor(model => model.TASKNAME)
    </p>
    <p class="col-md-10">

        @Html.ValidationMessageFor(model => model.TASKNAME, "", new { @class = "text-danger" })
    </p>
    <p class="form-group">
        @Html.LabelFor(model => model.ASSIGNEDTO, "AssignedTo", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("ASSIGNEDTO", (List<SelectListItem>)ViewBag.UserList, "Select User")
    </p>
    <p class="col-md-10">


        @Html.ValidationMessageFor(model => model.ASSIGNEDTO, "", new { @class = "text-danger" })
    </p>

    <p class="form-group">
        @Html.LabelFor(model => model.DUETO, "DueTo", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.TextBox("DUETO", Model.DUETO.HasValue ? Model.DUETO.Value.Date.ToString("dd-MM-yy") : "", new { @class = "datepicker", @autocomplete = "off", })

    </p>
    <p class="col-md-10">

        @Html.ValidationMessageFor(model => model.DUETO, "", new { @class = "text-danger" })

    </p>

    <p class="form-group">

        @Html.LabelFor(model => model.STATUS, "Status", htmlAttributes: new { @class = "control-label col-md-2 required" })
        @Html.DropDownListFor(model => model.STATUS, ViewBag.StatusList as SelectList)  @*, "Select Status", new { @class = "form-control" })*@

    </p>
    <p class="col-md-10">

        @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
    </p>

    <p class="form-group"></p>
    <p class="col-md-offset-2 col-md-10">
        @*<input type="submit" value="Save" class="btn btn-default" />*@
        <button type="submit"
                id="submitButton"
                class="btn btn-dark">
            Save
        </button>

        @Html.ActionLink("Back to List", "Index")

    </p>
 }


<script>
    $(document).ready(function () {


        $(".datepicker").datepicker({
            dateFormat: "dd-MM-yy",
            minDate: 0,
            changeMonth: true,
            changeYear: true,
            showButtonPanel: true,
            showOtherMonths: true,
            selectOtherMonths: true,
            showOn: 'button',
            buttonImageOnly: true,
            buttonImage: 'https://jqueryui.com/resources/demos/datepicker/images/calendar.gif',
            timepicker: false,


        });
    });
</script>